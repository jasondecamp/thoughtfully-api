{% extends templatePath+'/../base/html.nunjucks' %}

{% block body %}
  <!-- HERO IMAGE -->
  <table width="650" cellspacing="0" cellpadding="0" class="100p" bgcolor="#F2F2F2" style="border-bottom: 1px solid #F2F2F2; min-width:650px;">
    <tr>
      <td width="auto" align="center" valign="top">
        <img style="display:block;" alt="Get Moved" height="242" width="650"
          src="{{domain}}images/emails/welcome/hero-2x.jpg" border="0"/></a>
      </td>
    </tr>
  </table>

  <!-- CONTENT -->
  <table width="650" cellspacing="0" cellpadding="50" class="100p" bgcolor="#FFFFFF" style="border-bottom: 1px solid #F2F2F2; min-width:650px;">
    <tr>
      <td width="auto" align="center" valign="top" style="padding: 50px 60px;">
        <table width="530" cellspacing="0" cellpadding="0" class="100p">
          <tr>
            <td align="left" valign="top">
              <h1 style="font-size:26px; color:#333333; margin-top:0; margin-bottom:0; font-weight:700; font-family:'circular', Arial, sans-serif;">
                Welcome {{user.firstname}}!
              </h1>
            </td>
          </tr>
          <tr><td height="20"></td></tr>
          <tr>
            <td align="left" valign="top" style="font-size:14px; color:#999999; line-height:1.5; font-weight:300; font-family:'circular', Arial, sans-serif;">
                Need help getting started? Follow these simple steps to get your move on!
            </td>
          </tr>
          <tr><td height="30"></td></tr>
          <tr>
            <td align="left" valign="top">
              <table cellspacing="0" cellpadding="0">
                <tr>
                  <td width="255">
                    <div>
                      <!--[if mso]>
                      <v:roundrect xmlns:v="urn:schemas-microsoft-com:vml"
